@model Dish

<div class="text-center m-5">
    <div class="d-flex">
        <a href="/">Home</a>
    </div>
    @{
        <div class="text-center m-4">
            <h1>@Model.Name</h1>
            <h5>@Model.Chef</h5>
        </div>
        <hr class="m-3">
        <div class="d-flex row">
            <p class="m-2">@Model.Description</p>
        </div>
        <div class="d-flex row mt-3">
            <p class="m-2">Calories: @Model.Calories</p>
        </div>
        <div class="d-flex row">
            <p class="m-2 ICouldntResistUsingTheTypo">Tasiness: @Model.Tastiness</p>
        </div>
        <div class="d-flex justify-content-around">
            <a href="delete/@Model.DishId" class="btn btn-danger">Delete</a>
            <a href="edit/@Model.DishId" class="btn btn-secondary">Edit</a>
        </div>
    }
</div>