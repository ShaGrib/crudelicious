@model Dish

<div class="text-center m-5">
    <div class="d-flex m-4">
        <a href="/">Home</a>
    </div>
    <h1>Edit @Model.Name</h1>
        <div>
            <form action="/update/@Model.DishId" method="post" class="d-flex">
            <div class="col">
                <div class="form-group">
                    <label for="Chef">Chef's Name</label>
                    <input asp-for="Chef" class="form-control">
                    <span asp-validation-for="Chef" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Name">Name of Dish</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Calories"># of Calories</label>
                    <input asp-for="Calories" class="form-control" value="@Model.Calories">
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <label for="Tastiness">Tastiness</label>
                <select name="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="9001">9001</option>
                </select>
                <span asp-validation-for=Tastiness class="text-danger"></span>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea cols="20" rows="5" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit Dish" class="btn btn-secondary">
                </div>
            </div>
            </form>
        </div>
    </div>
</div>